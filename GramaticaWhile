while_stmt          01 : WHILE LPAREN condition RPAREN statement

statement           02 : expression_stmt 
                    03 | compound_stmt 

compound_stmt       04 : BLOCK_START local_instructions BLOCK_END

local_instructions  06 : local_instructions'

local_instructions' 06 : local_instruction local_instructions'
                    07 | empty

local_instruction   08 : type var_declaration EOI
                    09 | statement
                    
expression_stmt     10 : expression EOI
                    11 | EOI

expression          12 : expression' simple_expression

expression'         xx : ID ASSIGN
                    xx | empty

var_declaration     14 : var_definition var_declaration'

var_declaration'    15 : COMMA var_definition var_declaration'
                    16 | empty

var_definition      17 : ID var_definition'

var_definition'     xx : ASSIGN simple_expression
                    xx | empty

type                19 : INT
                    20 | FLOAT
                    21 | CHAR

condition           xx | condition_member condition'

condition'          xx | LOGIC_OP condition_member condition'
                    xx | empty

condition_member    xx : NEGATION simple_expression
                    xx | simple_expression

simple_expression   25 : additive_operation simple_expression'

simple_expression'  26 : RELATION_OP additive_operation simple_expression'
                    27 | empty

additive_operation  28 : prod_operation additive_operation'

additive_operation' 29 : ARITMETIC_OP_ADD prod_operation additive_operation'
                    30 | empty

prod_operation      31 : factor prod_operation' 

prod_operation'     32 : ARITMETIC_OP_PROD factor prod_operation'
                    33 | empty

factor              34 : LPAREN simple_expression RPAREN
                    35 | ID
                    36 | NUMBER
                    37 | CHARACTER 
